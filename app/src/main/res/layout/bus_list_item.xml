<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white"
    android:elevation="2dp">

    <!-- Bus Icon -->
    <ImageView
        android:id="@+id/bus_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bus_icon" />

    <!-- Departure & Arrival Time -->
    <TextView
        android:id="@+id/tv_departure_arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Cebu 08:00 → Davao 18:30"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Bus Number & Duration -->
    <TextView
        android:id="@+id/tv_bus_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus 101 • 10h 30m"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/darker_gray"
        android:paddingTop="4dp"/>

    <!-- Bus Company Name and Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bus_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Company"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₱800"
            android:textColor="#EB9701"
            android:gravity="end"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
