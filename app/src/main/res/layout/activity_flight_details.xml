<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Orange Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#eb9701"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FLIGHT DETAILS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_airline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum Airlines"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.07.20 - 23.07.20"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!-- Flight Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Flight Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:elevation="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_departure_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAP"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/airplane"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <TextView
                    android:id="@+id/tv_arrival_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KR"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_flight_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19:15 â†’ 21:45"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02H 35M NON-STOP"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_passenger_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anna Williams"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_seat_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seat: 09C"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_flight_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flight: 432GH4"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$190"
            android:textSize="24sp"
            android:textColor="#EB9701"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

        <!-- Confirm Booking Button -->
        <Button
            android:id="@+id/btn_confirm_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRM BOOKING"
            android:backgroundTint="#EB9701"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>
